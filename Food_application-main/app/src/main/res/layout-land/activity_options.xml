<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/options_et"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBCDFF"
    tools:context=".options">

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_style"
        android:backgroundTint="#BEFBFBFB"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="350dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/layout_style"
            android:backgroundTint="#7DB070D0"
            android:ems="10"
            android:hint="@string/search_in_options"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColorHint="#E98C8181"
            android:textSize="20sp" />

        <Button
            android:id="@+id/add_meals"
            android:layout_width="131dp"
            android:layout_height="54dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#67288F"
            android:fontFamily="@font/tillana"
            android:text="Add Meals" />

        <Button
            android:id="@+id/search2"
            android:layout_width="250dp"
            android:layout_height="64dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#67288F"
            android:fontFamily="@font/tillana"
            android:text="Search for Meals By Ingredient" />

        <Button
            android:id="@+id/search"
            android:layout_width="250dp"
            android:layout_height="64dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#67288F"
            android:fontFamily="@font/tillana"
            android:text="Search for Meals" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="39dp"
        app:layout_constraintEnd_toStartOf="@+id/layout_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dinedelight_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>