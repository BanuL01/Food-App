<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBCDFF"
    tools:context=".options">

    <ImageView
        android:id="@+id/logo_dd"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dinedelight_logo" />

    <Button
        android:id="@+id/search"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#67288F"
        android:fontFamily="@font/tillana"
        android:text="Search for Meals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search2" />

    <Button
        android:id="@+id/add_meals"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_marginTop="124dp"
        android:backgroundTint="#67288F"
        android:fontFamily="@font/tillana"
        android:text="Add Meals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_dd" />

    <Button
        android:id="@+id/search2"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#67288F"
        android:fontFamily="@font/tillana"
        android:text="Search for Meals By Ingredient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_meals" />

    <ImageView
        android:id="@+id/bg_3"
        android:layout_width="500dp"
        android:layout_height="812dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-550dp"
        android:rotation="15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg3"
        tools:layout_editor_absoluteX="-11dp"
        tools:layout_editor_absoluteY="-200dp" />

</androidx.constraintlayout.widget.ConstraintLayout>